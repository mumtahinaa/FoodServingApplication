<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".SignIn">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@color/yellow"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/poor"

            android:scaleType="centerCrop"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">



            <EditText

                android:id="@+id/signUpName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColorHint="#A29F9F"
                android:textColor="@color/black"
                android:drawableStart="@drawable/person"
                android:background="@drawable/shape"
                android:drawablePadding="12dp"
                android:hint="Username" />

            <EditText
                android:id="@+id/signUpEmail"
                android:layout_width="match_parent"
                android:textColorHint="#A29F9F"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/baseline_email_24"
                android:background="@drawable/shape"
                android:drawablePadding="12dp"
                android:inputType="textEmailAddress"
                android:hint="@string/email" />

            <EditText

                android:id="@+id/signUpPassword"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColorHint="#A29F9F"
                android:drawableStart="@drawable/password"
                android:background="@drawable/shape"
                android:drawablePadding="12dp"
                android:layout_marginTop="10dp"
                android:inputType="textPassword"
                android:hint="@string/password" />

            <EditText
                android:id="@+id/signUpConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textColorHint="#A29F9F"
                android:textColor="@color/black"
                android:drawableStart="@drawable/password"
                android:background="@drawable/shape"
                android:drawablePadding="12dp"
                android:inputType="textPassword"
                android:hint="Confirm Pasword" />




            <Button
                android:id="@+id/SignUpBotton"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:backgroundTint="@color/pink"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="as"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/donar"
                    android:layout_width="0dp"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_shape"
                    android:elevation="5dp"
                    android:textColor="@color/black"
                    android:text="Donar"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:drawableEnd="@drawable/donation"
                    android:layout_margin="10dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/volunteer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/btn_shape"
                    android:elevation="5dp"
                    android:drawableEnd="@drawable/volunteer"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="Volunteer"
                    android:layout_weight="1"/>





            </LinearLayout>






            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:gravity="bottom"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Already have an account"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/sendagain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Sign In"
                    android:elevation="5dp"

                    android:textStyle="bold"
                    android:textColor="#7F4C73"/>


            </LinearLayout>













    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>