<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".home_fragment">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingTop="5dp"
            android:paddingBottom="5dp">


            <TextView
                android:id="@+id/topName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HI Bijay,"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#DBC9D7"
                android:hapticFeedbackEnabled="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/notification" />
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Let's start spreading goodness!"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/homeProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/monkey"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>
            <TextView
                android:id="@+id/homeSomething"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_height="40dp"
                android:background="@drawable/et_sytle"
                android:backgroundTint="@color/yellow"
                android:hint="Post your information here..."
                android:padding="10dp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@drawable/shape"
                android:id="@+id/home_recycler"/>


        </LinearLayout>











</LinearLayout>