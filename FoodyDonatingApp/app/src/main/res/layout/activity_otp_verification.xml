<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtpVerification">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@color/yellow"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/poor"
            android:scaleType="centerCrop"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Enter the Otp sent to you"
            android:textAlignment="center"
            android:textSize="16sp"
            android:padding="4dp"
            android:textColor="@color/lightBlack"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/showTextNumber"
            android:textAlignment="center"
            android:textSize="16sp"
            android:padding="4dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
           android:layout_gravity="center"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/digitone"
                android:layout_width="40dp"
                android:layout_height="46dp"
                android:layout_margin="3dp"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:maxLength="1"
                android:textSize="24sp"
                android:layout_gravity="center"

                android:background="@drawable/shape"
                android:ems="10"
                android:inputType="number"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/digittwo"
                android:layout_width="40dp"
                android:layout_height="46dp"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:maxLength="1"
                android:textSize="24sp"
                android:background="@drawable/shape"
                android:ems="10"
                android:inputType="number"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/digitthree"
                android:layout_width="40dp"
                android:layout_height="46dp"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:maxLength="1"
                android:textSize="24sp"
                android:background="@drawable/shape"
                android:ems="10"
                android:inputType="number"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/digitfour"
                android:layout_width="40dp"
                android:layout_height="46dp"
                android:layout_margin="3dp"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:maxLength="1"
                android:textSize="24sp"
                android:background="@drawable/shape"
                android:ems="10"
                android:layout_gravity="center"
                android:inputType="number"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/digitfive"
                android:layout_width="40dp"
                android:layout_height="46dp"
                android:layout_margin="3dp"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:maxLength="1"
                android:textSize="24sp"

                android:background="@drawable/shape"
                android:ems="10"
                android:inputType="number"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/black" />
            <EditText
                android:id="@+id/digitsix"
                android:layout_width="40dp"
                android:layout_height="46dp"
                android:layout_margin="3dp"
                android:background="@drawable/shape"
                android:ems="10"
                android:padding="10dp"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:maxLength="1"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/black" />
        </LinearLayout>



        <Button
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:backgroundTint="@color/pink"
            android:text="Submit"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Didn't receive an email?"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/sendagain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Send again"
                android:elevation="5dp"
                android:textStyle="bold"
                android:textColor="#7F4C73"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>